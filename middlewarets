        loginMsg.style.color = "green";
        loginMsg.textContent = "âœ… ÄÄƒng nháº­p thÃ nh cÃ´ng!";
      } catch (err) {
        loginMsg.style.color = "red";
        loginMsg.textContent = "âŒ Sai tÃ i khoáº£n hoáº·c máº­t kháº©u!";
